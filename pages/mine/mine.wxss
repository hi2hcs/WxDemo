/* 限制text行数及...*/

.name {
  max-width: 250rpx;
  margin-left: 10rpx;
  font-weight: bold;
  display: -webkit-box;
  font-size: 18px;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.level {
  padding-left: 10rpx;
  padding-right: 10rpx;
  text-align: center;
